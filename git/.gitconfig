[branch]
        autosetuprebase = always

[core]
	excludesfile = /Users/alvinlee/.gitignore
        editor = nvim
        pager = diff-so-fancy | less --tabs=4 -RFX

[color]
        status = always
        ui = true

[color "diff-highlight"]
        oldNormal = red bold
        oldHighlight = red bold 52
        newNormal = green bold
        newHighlight = green bold 22

[color "diff"]
        meta = 227
        frag = magenta bold
        commit = 227 bold
        old = red bold
        new = green bold
        whitespace = red reverse

[diff-so-fancy]
        first-run = false

[credential]
        helper = cache --timeout=3600

[diff]
        tool = icdiff

[difftool]
        prompt = false

[difftool "icdiff"]
        cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[push]
        default = simple
        followTags = true

[user]
	name = Alvin Lee Jin Wen
	email = alvinlee001@live.com.my

[status]
        showUntrackedFiles = all

[merge]
        conflictstyle = diff3
        ; ff = only

[alias]
        rank = shortlog -sn --no-merges
        amend = commit --amend
        prune = fetch --prune
        stash-all = stash save --include-untracked
        p = "!git pull && git push"
[magit]
	hideCampaign = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree 2.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/alvinlee/.stCommitMsg
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
